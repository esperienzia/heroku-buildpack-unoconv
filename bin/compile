#!/bin/bash

set -e

BUILD_DIR=$1
CACHE_DIR=$2
APT_DIR=$BUILD_DIR/.apt
UNOCONV_DIR=$APT_DIR/usr/bin/unoconv
mkdir -p $(dirname $UNOCONV_DIR)

arrow() {
  sed -u 's/^/-----> /'
}

echo "LibreOffice: Setting PATH" | arrow
PROFILE_PATH="$BUILD_DIR/.profile.d/libreoffice.sh"
mkdir -p $(dirname $PROFILE_PATH)

# Add vendor binaries to the path
echo 'export OFFICE_PATH="$HOME/.apt/usr/lib/libreoffice"' >> $PROFILE_PATH
echo 'export UNO_PATH="$OFFICE_PATH"' >> $PROFILE_PATH

echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/.apt/usr/lib/libreoffice/program"' >> $PROFILE_PATH
echo 'export PYTHONPATH="/app/.apt/usr/lib/python3/dist-packages/"' >>  $PROFILE_PATH

SHEBANG="#!\/usr\/bin\/env python3.6"
sed -i "1s/.*/$SHEBANG/" $UNOCONV_DIR

cd $APT_DIR/usr/lib/x86_64-linux-gnu
ln -sv ../libreoffice/program/*.so .


#!/bin/bash

indent() {
sed -u 's/^/       /'
}

echo "-----> Install unoconv"

BUILD_DIR=$1
CACHE_DIR=$2
VENDOR_DIR="$BUILD_DIR/vendor"
mkdir -p $VENDOR_DIR
INSTALL_DIR="$VENDOR_DIR/unconv"
mkdir -p $INSTALL_DIR
UNCONV_VERSION="0.7"
CACHE_FILE="$CACHE_DIR/unoconv-0.7.tar.gz"

if [ ! -f $CACHE_FILE ]; then
    # install unoconv
    UNCONV_FILE="unoconv-$UNOCONV_VERSION.tar.xz"
    UNCONV_DIR="unconv-$UNOCONV_VERSION"
    # SSL cert used on unconv not recognized by heroku.
    UNCONV_URL="http://www.imagemagick.org/download/releases/$IMAGE_MAGICK_FILE"

    echo "-----> Downloading ImageMagick from $IMAGE_MAGICK_URL"
    wget $IMAGE_MAGICK_URL -P $BUILD_DIR | indent

    echo "-----> Extracting ImageMagick from $BUILD_DIR/$IMAGE_MAGICK_FILE"
    if [ ! -f $BUILD_DIR/$IMAGE_MAGICK_FILE ]; then
    echo "Error: Unable to download ImageMagick" | indent
    ls $BUILD_DIR | indent
    exit 1;
    fi
    tar xvf $BUILD_DIR/$IMAGE_MAGICK_FILE | indent

    echo "-----> Building ImageMagick"
    cd $IMAGE_MAGICK_DIR
    export CPPFLAGS="-I$INSTALL_DIR/include"
    export LDFLAGS="-L$INSTALL_DIR/lib"
    ./configure --prefix=$INSTALL_DIR --without-gvc
    make && make install
    cd ..
    rm -rf $IMAGE_MAGICK_DIR

    # cache for future deploys
    echo "-----> Caching ImageMagick installation"
    cd $VENDOR_DIR
    REL_INSTALL_DIR="imagemagick"
    tar czf $REL_INSTALL_DIR.tar.gz $REL_INSTALL_DIR
    mv $REL_INSTALL_DIR.tar.gz $CACHE_FILE

else
    # cache exists, extract it
    echo "-----> Extracting UNOCONV $CACHE_FILE => $VENDOR_DIR"
    tar xzf $CACHE_FILE -C $VENDOR_DIR
fi

# update PATH and LD_LIBRARY_PATH
echo "-----> Updating environment variables"
PROFILE_PATH="$BUILD_DIR/.profile.d/unoconv.sh"
ACTUAL_INSTALL_PATH="$HOME/vendor/unoconv"
mkdir -p $(dirname $PROFILE_PATH)
echo "export PATH=$ACTUAL_INSTALL_PATH/bin:\$PATH" >> $PROFILE_PATH
echo "export LD_LIBRARY_PATH=$ACTUAL_INSTALL_PATH/lib:\$LD_LIBRARY_PATH" >> $PROFILE_PATH
echo "export UNCONV_CONFIGURE_PATH=$ACTUAL_INSTALL_PATH" >> $PROFILE_PATH